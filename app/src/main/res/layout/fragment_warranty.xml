<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvItemNameText"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:text="Item Name: "
        android:layout_margin="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvItemName"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:text="Helloasdfsdfasf"
        android:textSize="15sp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/tvItemNameText"/>

    <TextView
        android:id="@+id/tvItemDescriptionText"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:text="Description: "
        android:layout_margin="20dp"
        android:layout_below="@+id/tvItemNameText"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvItemDescription"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:text="Hello"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/tvItemDescriptionText"
        android:layout_below="@+id/tvItemName"
        />

    <TextView
        android:id="@+id/tvExpiryDateText"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:text="Expiration Date:"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_below="@+id/tvItemDescriptionText"
        />

    <TextView
        android:id="@+id/tvExpiryDate"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:text="Hello"
        android:layout_margin="20dp"
        android:layout_below="@+id/tvItemDescription"
        android:layout_toRightOf="@id/tvExpiryDateText"
        />



</RelativeLayout>